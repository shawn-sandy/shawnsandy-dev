{% extends "_Layout.njk" %}
{% block head %}
  {{ super() }}
{% endblock %}
{% block content %}
  <main style="padding-top: calc(100rem / 16)">
    <section>
      {# -------------- #}
      <article>
        {% if title %}
          <h2 role="presentation ">{{ title }}</h2>
          {% if showDate %}
            <time datetime="{{ page.date }}">
              <i class="ti ti-calendar-event"></i>
              {# {{ hlp.11ty.timeAgo(page.date) }} #}
              {{ hlp.11ty.formattedDate(page.date) }}
            </time>
          {% endif %}
        {% endif %}
        <p>
         {{ content | safe }}
        </p>
      </article>
    </section>
    <aside>
      <section class="bio">
        <h5 role="presentation ">
          <i class="ti ti-arrow-bar-to-right"></i>
          {{ settings.author.name }}
        </h5>
        {# <i class="ti ti-brand-twitter"></i> #}
        <p class="primary">
          {{ settings.description }}
        </p>
      </section>
      {# <hr /> #}
      {% include "partials/sidebar.njk" %}
    </aside>
  </main>
{% endblock %}
{% block footer %}
  {{ super() }}
{% endblock %}
